<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/purple_200"
        android:paddingEnd="50dp"
        android:text="Soru"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/radio_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group"
        app:layout_constraintTop_toBottomOf="@+id/text_view_question"
        app:layout_constraintStart_toStartOf="@+id/text_view_question"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/radio_button_a"
            android:layout_width="match_parent"
            android:text="A şıkkı"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_button_b"
            android:layout_width="match_parent"
            android:text="B şıkkı"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_button_c"
            android:layout_width="match_parent"
            android:text="C şıkkı"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_button_d"
            android:text="D şıkkı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>